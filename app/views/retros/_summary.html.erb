<div class="list-group-item list-group-item-action d-flex gap-3 py-3">
  <div class="d-flex gap-2 w-100 justify-content-between">
    <div>
      <h5 class="mb-0"><%= retro.description %></h5>
      <p class="mb-0 opacity-75"><%= retro.retro_date %></p>
      <p class="mb-0 opacity-75">Participants: <%= retro.participants.length %></p>
    </div>
    <div>
      <p class="mb-0 opacity-75 text-end">Status:</p>
      <p class="mb-0 opacity-50 text-end"><%= retro.state %></p>

      <div class="text-end">
      <% if owner %>
        <a href="<%= retro_path(retro) %>" data-turbo="false">Manage</a>
        <% if retro.state != "setup" %>
          |
        <% end %>
      <% end %>
      <% if retro.state == "complete" %>
        <a href="/<%= retro.state %>/<%= retro.id %>" data-turbo="false">View</a>
      <% elsif retro.state != "setup" %>
        <a href="/<%= retro.state %>/<%= retro.id %>" data-turbo="false">Join</a>
      <% end %>
      </div>
    </div>
  </div>
</div>
